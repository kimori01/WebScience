@model WebScience.Models.tb_BaoChi
@{
    ViewBag.Title = "CreateBaoChi";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thêm mới báo chí</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <form action="@Url.Action("CreateBaoChi")" data-otf-ajax="true" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaBaoChi)
                                    @Html.TextBoxFor(model => model.MaBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MaBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TieuDeBaoChi)
                                    @Html.TextBoxFor(model => model.TieuDeBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TieuDeBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Tên Đề Tài:</label>
                                    <div class="input-group">
                                        <input type="text" id="TenDeTai" readonly="readonly" name="TenDeTai" class="form-control">
                                        <input type="hidden" id="IdMaDeTai" name="IdMaDeTai" class="form-control">
                                        <div class="input-group-addon" data-toggle="modal" data-target="#modal-default">
                                            <i class="fa fa-edit"></i>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.TenDeTai, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenBaoChi)
                                    @Html.TextBoxFor(model => model.TenBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TenBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TacGiaBaoChi)
                                    @Html.TextBoxFor(model => model.TacGiaBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TacGiaBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NgayXuatBan)
                                    @Html.TextBoxFor(model => model.NgayXuatBan, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NgayXuatBan, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NoiDungBaoChi)
                                    @Html.TextBoxFor(model => model.NoiDungBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NoiDungBaoChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">Tìm Kiếm Đề Tài</h5>
            </div>
            <div class="modal-body">
                <div class="input-group input-group-sm" style="width: 100%;">
                    <input type="text" id="table_search" class="form-control pull-right" placeholder="Tìm kiếm">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default" onclick="seachDeTai($('#table_search').val())"><i class="fa fa-search"></i></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table id="myTableDeTai" class="table table-bordered table-hover dataTable">
                            <tbody class="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
