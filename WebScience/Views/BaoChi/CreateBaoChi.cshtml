@model WebScience.Models.tb_BaoChi
@{
    ViewBag.Title = "CreateBaoChi";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thêm mới báo chí</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaBaoChi)
                                    @Html.TextBoxFor(model => model.MaBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MaBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TieuDeBaoChi)
                                    @Html.TextBoxFor(model => model.TieuDeBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TieuDeBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NgayXuatBan)
                                    @Html.TextBoxFor(model => model.NgayXuatBan, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NgayXuatBan, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenBaoChi)
                                    @Html.TextBoxFor(model => model.TenBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TenBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TacGiaBaoChi)
                                    @Html.TextBoxFor(model => model.TacGiaBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TacGiaBaoChi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ThoiGian)
                                    @Html.TextBoxFor(model => model.ThoiGian, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NoiDungBaoChi)
                                    @Html.TextBoxFor(model => model.NoiDungBaoChi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NoiDungBaoChi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

