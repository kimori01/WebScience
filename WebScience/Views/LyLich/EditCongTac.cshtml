@using WebScience.ViewData;
@model ViewCongTacLyLich

<section class="content-header">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Sửa thông tin công tác</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="@Url.Action("EditCongTac")" data-otf-ajax="true" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input type="hidden" id="MaLyLich" name="MaLyLich" value="@Model.MaLyLich" />
                    <input type="hidden" id="IdLyLich" name="IdLyLich" value="@Model.IdLyLich" />
                    <input type="hidden" id="IdLyLich" name="IdLyLich" value="@Model.Id" />
                    <div class="box-body">
                        <div class="form-group">
                            <label class="control-label">Thời gian:</label>
                            <input type="text" id="ThoiGian" name="ThoiGian" value="@Model.ThoiGian" required oninvalid="this.setCustomValidity('Vui lòng nhập thời gian!')" oninput="setCustomValidity('')" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Vị trí công tác:</label>
                            <input type="text" id="ViTriCongTac" name="ViTriCongTac" value="@Model.ViTriCongTac" required oninvalid="this.setCustomValidity('Vui lòng nhập vị trí công tác!')" oninput="setCustomValidity('')" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tổ chức công tác:</label>
                            <input type="text" id="ToChucCongTac" name="ToChucCongTac" value="@Model.ToChucCongTac" class="form-control" required oninvalid="this.setCustomValidity('Vui lòng nhập tổ chức công tác!')" oninput="setCustomValidity('')">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Địa chỉ công tác:</label>
                            <input type="text" id="DiaChiCongTac" name="DiaChiCongTac" value="@Model.DiaChiCongTac" class="form-control" required oninvalid="this.setCustomValidity('Vui lòng nhập địa chỉ công tác!')" oninput="setCustomValidity('')">
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a href="@Url.Action("ThongTinLyLich", new { Id = Model.IdLyLich })" class="btn btn-primary">Quay Lại</a>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>

