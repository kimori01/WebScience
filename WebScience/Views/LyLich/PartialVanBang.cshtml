@model IEnumerable<WebScience.Models.tb_VanBang>
<div class="row">
    <div class="col-md-12">
        <div class="box-tools pull-left" style="padding-bottom: 10px;">
            <button type="button" class="btn btn-block btn-default btn-sm" data-toggle="modal" data-target="#modal-vanbang">Thêm</button>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Mã Văn Bằng</th>
                    <th>Tên Văn Bằng</th>
                    <th>Năm Cấp</th>
                    <th style="width: 40px"></th>
                </tr>
                @if (Model.FirstOrDefault().Id != 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaVanBang)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenVanBang)</td>
                            <td>@Html.DisplayFor(modelItem => item.NamCap)</td>
                            <td><button class="btn btn-default btn-sm">Xóa</button></td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal-vanbang">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Thêm mới văn bằng</h4>
            </div>
            <form action="@Url.Action("AddVanBang")" data-otf-ajax="true" data-otf-target="#themmoivanbang" method="post">
                <input type="hidden" id="IdMaLyLich" name="IdMaLyLich" value="@Model.FirstOrDefault().IdMaLyLich" />
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Mã Văn Bằng:</label>
                        <input type="text" id="MaVanBang" name="MaVanBang" required oninvalid="this.setCustomValidity('Vui lòng nhập mã văn bằng!')" oninput="setCustomValidity('')" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tên Văn Bằng:</label>
                        <input type="text" id="TenVanBang" name="TenVanBang" required oninvalid="this.setCustomValidity('Vui lòng nhập tên văn bằng!')" oninput="setCustomValidity('')" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Năm Cấp</label>
                        <input type="text" id="NamCap" name="NamCap" class="form-control" required oninvalid="this.setCustomValidity('Vui lòng nhập năm công tác!')" oninput="setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nội Dung:</label>
                        <input type="text" id="NoiDung" name="NoiDung" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
